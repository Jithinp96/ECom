                            <% } %>      
                            Payment ID: <%= order.paymentId %></p>
                        </div>
                    </div>
                </div>
            </div> -->
        </div>
        <div class="col-lg-4">
          <!-- Customer Notes -->
          <div class="card mb-4 p-3">
            <div class="card-body ">
                <!-- <div class="row p-5"> -->
                    <!-- <div class="col-lg-8"> -->
                        <h3 class="h6">Payment Details</h3>
                        <% if (order.paymentMode === 'cod') { %>
                            <p><strong>Payment Method: </strong>Cash On Delivery<br>
                        <% } else if (order.paymentMode === 'razorpay') { %>
                            <p><strong>Payment Method: </strong>Razor Pay<br>
                        <% } else if (order.paymentMode === 'wallet') { %>
                            <p><strong>Payment Method: </strong>Wallet<br>
                        <% } %>      
                        <strong>Payment ID: </strong><%= order.paymentId %></p>
                    <!-- </div> -->
                <!-- </div> -->
            </div>
        </div>
          <div class="card mb-4 p-3">
            <!-- Shipping information -->
            <div class="card-body">

              <h3 class="h6">Shipping Information</h3>
              <strong>FedEx</strong>
              <span><a href="#" class="text-decoration-underline" target="_blank">FF1234567890</a> <i class="bi bi-box-arrow-up-right"></i> </span>
              <hr>
              <h3 class="h6">Shipping Address</h3>
              <address>
                <strong><%=order.address.name %></strong><br>
                <%=order.address.housename %><br>
                <%=order.address.street %>, <%=order.address.city %><br>
                Pincode: <%=order.address.pin %><br>
                Mobile: +91-<%=order.address.mobile %>
              </address>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<!-- Cancel Item -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.cancel-link').forEach(function (link) {
            link.addEventListener('click', function (event) {
                event.preventDefault();
                var index = this.getAttribute('data-index');
                cancelItem(index);
            });
        });

        function cancelItem(index) {
            // Send an AJAX request to the server to update the status of the item
            // Assuming you have an endpoint like '/cancelItem' to handle this
            fetch('/cancelItem', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ index: index }),
            })
            .then(response => response.json())
            .then(data => {
                // Update the UI to reflect the changed status
                document.getElementById('product' + index).querySelector('.badge').textContent = 'cancelled';
            })
            .catch(error => console.error('Error:', error));
        }
    });
</script>

