<script>
    const inputs = document.querySelectorAll(".input-field input"),
        button = document.getElementById("send-email-button");

    inputs.forEach((input, index) => {
        input.addEventListener("input", (e) => {
            const currentInput = input,
                nextInput = index < inputs.length - 1 ? inputs[index + 1] : null,
                prevInput = index > 0 ? inputs[index - 1] : null;

            // Allow only numeric characters
            currentInput.value = currentInput.value.replace(/\D/g, '');

            if (nextInput && nextInput.hasAttribute("disabled") && currentInput.value !== "") {
                nextInput.removeAttribute("disabled");
                nextInput.focus();
            }

            if (e.inputType === "deleteContentBackward" && currentInput.value === "") {
                if (prevInput) {
                    currentInput.setAttribute("disabled", true);
                    prevInput.focus();
                }
            }

            button.classList.toggle("active", !inputs[3].disabled && inputs[3].value !== "");
        });

        input.addEventListener("keydown", (e) => {
            // Allow only numeric characters and the backspace key
            if (!/\d/.test(e.key) && e.key !== 'Backspace') {
                e.preventDefault();
            }

            if (e.key === "Backspace") {
                const prevInput = index > 0 ? inputs[index - 1] : null;
                const currentLength = input.value.length;

                if (currentLength === 0 && prevInput) {
                    input.setAttribute("disabled", true);
                    prevInput.focus();
                }
            }
        });
    });

    window.addEventListener("load", () => inputs[0].focus());
</script>

