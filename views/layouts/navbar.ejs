                                </li>
                            <% } else { %>
                                <!-- If user is not authenticated, show a different option (e.g., login link) -->
                                <li class="compare-product">
                                    <a href="/login" class="btn-remove" title="Remove Product"><i class="icon-angle-right"></i></a>
                                    <h4 class="compare-product-title"><a href="/login">Login</a></h4>
                                </li>
                            <% } %>
