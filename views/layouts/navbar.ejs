                    </a>

                    <div class="dropdown-menu dropdown-menu-right">
                        <ul class="compare-products">
                            <!-- User specific show -->

                            <% if (locals.userAuthenticated) { %>
                                <!-- If user is authenticated, show "Your Account" and "Logout" options -->
                                <li class="compare-product">
                                    <a href="/profile" class="btn-remove" title="Remove Product"><i class="icon-angle-right"></i></a>
